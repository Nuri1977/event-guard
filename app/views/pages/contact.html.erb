<section class="text-gray-600 body-font relative bg-gray-800 lg:pt-10">
    <div class="container px-5 py-24 mx-auto flex sm:flex-nowrap flex-wrap">
        <div class="lg:w-2/5 md:w-1/2 bg-gray-300 rounded-lg overflow-hidden sm:mr-10 p-10 flex items-end justify-start relative">
            <iframe width="100%" height="100%" class="absolute inset-0" frameborder="0" title="map" marginheight="0" marginwidth="0" scrolling="no" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387190.2799020023!2d-74.25987151233467!3d40.69767006580528!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2smk!4v1641909992951!5m2!1sen!2smk"  style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            <div class="bg-white relative flex flex-wrap py-6 rounded shadow-md">
                    <div class="lg:w-1/2 px-6">
                        <h2 class="title-font font-extrabold text-gray-900 tracking-widest text-xs">ADDRESS</h2>
                        <p class="mt-1">312 Lovely Street St. New York,NY 56301</p>
                    </div>
            <div class="lg:w-1/2 px-6 mt-4 lg:mt-0">
                <h2 class="title-font font-extrabold text-gray-900 tracking-widest text-xs">EMAIL</h2>
                <%= mail_to "contact@events.com","contact@events.com", class:"text-indigo-500 leading-relaxed"%>
                <h2 class="title-font font-extrabold text-gray-900 tracking-widest text-xs mt-4">PHONE</h2>
                <%=link_to "850-123-5021","tel:850-123-5021"%>
            </div>
        </div>
    </div>
    <div class="lg:w-3/5 md:w-1/2 bg-white rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
        <h2 class="text-gray-900 text-3xl mb-1 font-extrabold title-font">Get in touch</h2>
        <p class="leading-relaxed mb-5 text-gray-600">Fill in the form to start a conversation and the Events team will get back to you ASAP.</p>

        <%= form_with url: "/create_contact", model: @contact, scope: :contact do |f|%>
            <div class="relative mb-4">
                <%= f.label :full_name, "Name",class:"leading-7 text-sm text-gray-600 "%>
                <%= f.text_field :full_name, required: true, placeholder: "Enter Your Name", class: "input w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
                <%= field_has_error(:full_name, @contact)%>
            </div>
            <div class="relative mb-4">
                <%= f.label :email, "Email", class:"leading-7 text-sm text-gray-600 "%>
                <%= f.email_field :email, required: true, placeholder: "Enter Your Email", class:"email w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"%>
                <%= field_has_error(:email, @contact)%>
            </div>
            <div class="relative mb-4">
                <%= f.label :message,"Message", class: "leading-7 text-sm text-gray-600"%>
                <%= f.text_area :message, required: true, placeholder: "Enter Your Message", class:"textarea w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"%>
                <%= field_has_error(:message, @contact)%>
            </div>
            <%= f.submit "Submit Message", class:" text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"%>
        <% end %>

        <p class="text-xs text-gray-500 mt-3">Chicharrones blog helvetica normcore iceland tousled brook viral artisan.</p>
    </div>
</section>