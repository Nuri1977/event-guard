<section class="py-1 bg-gray-100  bg-opacity-50">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="mx-auto container max-w-2xl md:w-3/4 shadow-md">
        <div class="bg-gray-100 p-4 border-t-2 bg-opacity-5 border-indigo-400 rounded-t">
          <div class="max-w-sm mx-auto md:w-full md:mx-0">
            <div class="inline-flex items-center space-x-4">
              <%= image_tag 'dashboard-avatar.png', title: "User avatar", class: "w-10 h-10 object-cover rounded-full" %>
              <h1 class="text-gray-600"><%= resource_name.to_s.humanize %></h1>
            </div>
          </div>
        </div>
        <div class="bg-white space-y-6">
          <div class="md:inline-flex space-y-4 md:space-y-0 w-full p-4 text-gray-500 items-center">
            <h2 class="md:w-1/3 max-w-sm mx-auto">Account</h2>
            <div class="md:w-2/3 max-w-sm mx-auto">
              <%= f.label :email, class:"text-sm text-gray-400" %>
              <div class="w-full inline-flex border">
                <div class="pt-2 w-1/12 bg-gray-100 bg-opacity-50">
                  <svg
                    fill="none"
                    class="w-6 text-gray-400 mx-auto"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                </div>
                <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "w-11/12 focus:outline-none focus:text-gray-600 p-2" %>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
              </div>
              <%= field_has_error(:email, resource)%>
            </div>
          </div>

          <hr />
          <div class="md:inline-flex  space-y-4 md:space-y-0  w-full p-4 text-gray-500 items-center">
            <h2 class="md:w-1/3 mx-auto max-w-sm">Personal info</h2>
            <div class="md:w-2/3 mx-auto max-w-sm space-y-5">
              <div>
                <%= f.label :first_name, class:"text-sm text-gray-400" %>
                <div class="w-full inline-flex border">
                  <div class="w-1/12 pt-2 bg-gray-100">
                    <svg
                      fill="none"
                      class="w-6 text-gray-400 mx-auto"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                      />
                    </svg>
                  </div>
                  <%= f.text_field :first_name, required: true, autofocus: true, class:"w-11/12 focus:outline-none focus:text-gray-600 p-2" %>
                </div>
                <%= field_has_error(:first_name, resource)%>
              </div>
              <div>
                <%= f.label :last_name, class:"text-sm text-gray-400" %>
                <div class="w-full inline-flex border">
                  <div class="pt-2 w-1/12 bg-gray-100">
                    <svg
                      fill="none"
                      class="w-6 text-gray-400 mx-auto"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                      />
                    </svg>
                  </div>
                  <%= f.text_field :last_name, required: true, autofocus: true, class:"w-11/12 focus:outline-none focus:text-gray-600 p-2" %>
                </div>
                <%= field_has_error(:last_name, resource)%>
              </div>
            </div>
          </div>

          <hr />
          <div class="md:inline-flex w-full space-y-4 md:space-y-0 p-8 text-gray-500 items-center">
            <h2 class="md:w-4/12 max-w-sm mx-auto">Change password</h2>
            <div class="flex flex-col items-center md:w-5/12 md:pl-9 max-w-sm mx-auto space-y-5 pl-2">
              <div>
                <div class=" md:inline-flex">
                  <div class="w-full inline-flex border-b">
                    <div class="w-1/12 pt-2">
                      <svg
                        fill="none"
                        class="w-6 text-gray-400 mx-auto"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                        />
                      </svg>
                    </div>
                    <%= f.password_field :password, required: true, placeholder: "New Password", autocomplete: "new-password", class:"w-11/12 focus:outline-none focus:text-gray-600 p-2 ml-4" %>
                  </div>
                  <%= field_has_error(:password, resource)%>
                </div>

                <div class="pl-6">
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>
              </div>

              <div class="md:inline-flex">
                <div class="w-full inline-flex border-b">
                  <div class="w-1/12 pt-2">
                    <svg
                      fill="none"
                      class="w-6 text-gray-400 mx-auto"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                      />
                    </svg>
                  </div>
                  <%= f.password_field :password, required: true, placeholder: "Confirm Pasword", autocomplete: "confirm-password", class:"w-11/12 focus:outline-none focus:text-gray-600 p-2 ml-4" %>
                </div>
                <%= field_has_error(:password, resource)%>
              </div>


              <div class="md:inline-flex">
                <div class="w-full inline-flex border-b">
                  <div class="w-1/12 pt-2">
                    <svg
                      fill="none"
                      class="w-6 text-gray-400 mx-auto"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                      />
                    </svg>
                  </div>
                  <%= f.password_field :current_password, required: true, placeholder: "Current Pasword", autocomplete: "current-password", class:"w-11/12 focus:outline-none focus:text-gray-600 p-2 ml-4" %>
                </div>
              </div>
              <%= field_has_error(:current_password, resource)%>
            </div>


            <div class="md:w-3/12 text-center md:pl-6">
              <div class="text-white w-full mx-auto max-w-sm rounded-md text-center bg-indigo-400 py-2 px-4 inline-flex items-center focus:outline-none md:float-right">
                <svg
                  fill="none"
                  class="w-4 text-white mr-2"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                  />
                </svg>
                <%= f.submit "Update", class: "bg-indigo-400 cursor-pointer focus:outline-none" %>
              </div>
            </div>
          </div>
  <% end %>
          <hr />
          <div class="w-full p-4 text-right text-gray-500">
            <div class="inline-flex items-center focus:outline-none mr-4">
              <svg
                fill="none"
                class="w-4 mr-2"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                />
              </svg>
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "bg-transparent cursor-pointer" %>
            </div>
          </div>
        </div>
      </div>

</section>