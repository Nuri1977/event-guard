<div class="bg-gray-800">
  <div class="flex max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800 md:max-w-lg  lg:max-w-4xl">
      <div class="hidden bg-cover lg:block lg:w-1/2" style="background-image:url(<%= image_path('sign-in.png') %>)"></div>

      <div class="w-full px-6 pb-40 pt-12 md:px-8 lg:w-1/2">
          <h2 class="text-2xl font-semibold text-center text-gray-700 dark:text-white">Events</h2>
          <p class="text-xl text-center text-gray-600 dark:text-gray-200">Fill in your information to register</p>
          <div class="flex items-center justify-between mt-4">
              <span class="w-1/5 border-b dark:border-gray-600 lg:w-1/4"></span>
              <span class="w-1/5 border-b dark:border-gray-400 lg:w-1/4"></span>
          </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="mt-4">
                  <%= f.label :first_name, class:"block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200"  %>
                  <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "Enter Your First Name", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
                </div>

                <div class="mt-4">
                  <%= f.label :last_name, class: "block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
                  <%= f.text_field :last_name, required: true, autofocus: true, placeholder: "Enter Your Last Name", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
                </div>

                <div class="mt-4">
                  <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
                  <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Enter Your Email Adress", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
                </div>

                <div class="mt-4">
                  <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, required: true, autocomplete: "new-password",  placeholder: "Enter Your Password", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
                </div>

                <div class="mt-4">
                  <%= f.label :password_confirmation ,  class: "block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
                  <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Enter Your Password", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
                </div>

                <div class="mt-8">
                  <%= f.submit "Sign up",  class: "w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-800 rounded hover:bg-blue-600 focus:outline-none focus:bg-gray-600" %>
                </div>
              <% end %>

              <div class="mt-2">
              <div class="flex justify-between">
                    <%= link_to "Already have an account? ", new_user_session_path, class: "text-xs text-gray-500 dark:text-gray-300 hover:underline" %>
              </div>
              </div>

             <div class="flex items-center justify-between mt-2">
                <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>
                  <%= link_to "Sign In", new_user_session_path, class: "text-xs text-gray-500 uppercase dark:text-gray-400 hover:underline" %>
                <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>
            </div>

          </div>
      </div>
  </div>