<div class="bg-gray-800">
  <div class="flex max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800 md:max-w-xl lg:max-w-6xl">
      <div class="hidden bg-cover lg:block lg:w-1/2" style="background-image:url(<%= image_path('sign-in.png') %>"></div>

      <div class="w-full px-6 pt-16 pb-36 md:px-8 lg:w-1/2">
          <h2 class="text-2xl font-semibold text-center text-gray-700 dark:text-white">Events</h2>

          <p class="text-lg text-center text-gray-600 dark:text-gray-200">Forgot Password? We'll send you a link to reset your password, so you see the full experience</p>


          <div class="flex items-center justify-between my-8">
              <span class="w-1/5 border-b dark:border-gray-600 lg:w-1/4"></span>

              <a href="#" class="text-xs text-center text-gray-500 uppercase dark:text-gray-400 hover:underline"></a>

              <span class="w-1/5 border-b dark:border-gray-400 lg:w-1/4"></span>
          </div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

              <div class="mt-4">
                <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
                <%= f.email_field :email, autofocus: true, required: true, placeholder: "Enter your email address", autocomplete: "email", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
                <%= field_has_error(:email, resource)%>
              </div>

              <div class="mt-8">
                <%= f.submit "Reset Password", class: "w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-800 rounded hover:bg-blue-600 focus:outline-none focus:bg-gray-600" %>
              </div>
            <% end %>

      </div>
  </div>
</div>